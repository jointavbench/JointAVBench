# JointAVBench Evaluation Environment Configuration
# Copy this file to .env and fill in your actual values

# ============================================
# API Keys
# ============================================

# OpenAI API Key (for GPT-4V evaluation)
OPENAI_API_KEY=your_openai_api_key_here

# Google API Key (for Gemini evaluation)
GOOGLE_API_KEY=your_google_api_key_here
GEMINI_API_KEY=your_gemini_api_key_here

# ============================================
# Model Paths (for locally hosted models)
# ============================================

# VITA model path
VITA_MODEL_PATH=/path/to/vita-model
# Can also use Hugging Face model name: VITA-MLLM/VITA-1.5

# Kimi-Audio model path
KIMI_AUDIO_MODEL_PATH=/path/to/kimi-audio-model
# Can also use: moonshotai/Kimi-Audio-7B-Instruct

# Qwen models
QWEN_VL_MODEL_PATH=/path/to/qwen-vl-model
QWEN_AUDIO_MODEL_PATH=/path/to/qwen-audio-model
QWEN_MODEL_PATH=/path/to/qwen-model

# InternVL model path
INTERNVL_MODEL_PATH=/path/to/internvl-model

# Video-LLaMA model path
VIDEOLLAMA_MODEL_PATH=/path/to/videollama-model

# ============================================
# Directory Paths
# ============================================

# Video directory (where benchmark videos are stored)
VIDEO_DIR=../data/videos

# Data directory
DATA_DIR=../data

# Results directory
RESULTS_DIR=./results

# ============================================
# Evaluation Configuration
# ============================================

# Default batch size
BATCH_SIZE=1

# Number of workers for data loading
NUM_WORKERS=4

# Device (cuda or cpu)
DEVICE=cuda

# Enable debug mode
DEBUG=False

# Log level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO
